<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.bhuvan.rgukt.MainActivity">

    <TextView
        android:text="Greetings from RGUKT"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#112"
        android:textStyle="bold"
        android:textSize="20dp"
        android:id="@+id/textView" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/banner"
        android:src="@drawable/banner"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/thankyou"
        android:src="@drawable/thankyou"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/college"
        android:src="@drawable/greeting"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/thankyou"
        android:layout_toEndOf="@+id/thankyou" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:onClick="submit"
        android:textColor="#0d0aa7"

        android:id="@+id/submit"
        android:layout_below="@+id/thankyou"
        android:layout_toLeftOf="@+id/college"
        android:layout_toStartOf="@+id/college" />


</RelativeLayout>
